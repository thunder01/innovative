<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innovative.dao.ExpertDao">

	<resultMap id="expertMap" type="Expert">
	  <id property="id" column="user_id" />
	  <result property="contact" column="contact"/>
	  <result property="cooperationStatus" column="cooperationStatus"/>
	  <result property="createdBy" column="createdBy"/>
	  <result property="createdAt" column="createdAt"/>
	  <result property="deleted" column="deleted"/>
	  <result property="deletedAt" column="deletedAt"/>
	  <result property="deletedBy" column="deletedBy"/>
	  <result property="education" column="education"/>
	  <result property="hFactor" column="hFactor"/>
	  <result property="isActive" column="isActive"/>
	  <result property="jobTitle" column="jobTitle"/>
	  <result property="name" column="name"/>
	  <result property="rank" column="rank"/>
	  <result property="researchAchievement" column="researchAchievement"/>
	  <result property="researchDirection" column="researchDirection"/>
	  <result property="resume" column="resume"/>
	  <result property="rowVersion" column="rowVersion"/>
	  <result property="unit" column="unit"/>
	  <result property="updatedAt" column="updatedAt"/>
	  <result property="updatedBy" column="updatedBy"/>
	  <result property="file" column="file"/>
	  <result property="tags" column="tags" typeHandler="com.innovative.mybatisHandler.ArrayTypeHandler"/>
	   <result property="sectors" column="sectors" typeHandler="com.innovative.mybatisHandler.ArrayTypeHandler"/>
	</resultMap> 
	
	<resultMap id="statusMap" type="Map">
	  <result property="name" column="value"/>
	  <result property="value" column="code"/>
	  <result property="status" column="title"/>
	   <result property="rank" column="rank"/>
	</resultMap> 

    <!--根据id获取专家详情-->
	<select id="getExpert" resultMap="expertMap">
		SELECT * FROM "Experts" WHERE "Id" =  #{id};
	</select>


	<!--根据查询条件获取列表-->
	<select id="getExpertList" resultType="Expert">
		SELECT * FROM "Experts"
		<where>
			<if test="sectors!=null and sectors!=''">
				 "Sectors" @> '${sectors}'
			</if>
		</where>
		limit #{pageSize} offset #{startIndex}
	</select>



	<!--查询行业领域搜索条件的总条数-->
	<select id="getTotalCount" resultType="int">
		SELECT count(1) FROM "Experts"
		<where>
			<if test="sectors!=null and sectors!=''">
				"Sectors" @> '${sectors}'
			</if>
			AND "Deleted" = 'f' AND "IsActive" = 't'
		</where>
	</select>



	<!--添加专家信息-->
	<insert id="addExpert" parameterType="map">
		INSERT INTO "Experts"
		("Id", "Avatar", "Contact", "CooperationStatus", "CreatedAt", "CreatedBy", "Deleted", "DeletedAt", "DeletedBy", "Education", "HFactor", "IsActive", "JobTitle", "Name", "Rank", "ResearchAchievement", "ResearchDirection", "Resume", "RowVersion", "Sectors", "Tags", "Unit", "UpdatedAt", "UpdatedBy", "File")
	VALUES (#{id}, '${avatar}', #{contact}, #{cooperationStatus}, now(), #{createdBy}, false, now(), #{deletedBy}, #{education}, #{hFactor}, #{isActive}, #{jobTitle}, #{name}, #{rank}, #{researchAchievement}, #{researchDirection}, #{resume}, #{rowVersion}, '${sectors}', '${tags}', #{unit}, #{createdAt}, #{updatedBy}, '${file}')
	</insert>


<!--添加专家信息-->
	<insert id="addForExpert" parameterType="Expert" >
		INSERT INTO "Experts"
		( "Avatar", "Contact", "CooperationStatus", "CreatedAt", "CreatedBy", "Deleted", "DeletedAt", "DeletedBy", "Education", "HFactor", "IsActive", "JobTitle", "Name", "Rank", "ResearchAchievement", "ResearchDirection", "Resume", "RowVersion", "Sectors", "Tags", "Unit", "UpdatedAt", "UpdatedBy", "File")
		VALUES ( '${avatar}', #{contact}, #{cooperationStatus}, now(), 'test', false, now(), 'test', #{education}, #{hFactor}, #{isActive}, #{jobTitle}, #{name}, #{rank}, #{researchAchievement}, #{researchDirection}, #{resume}, #{rowVersion},
	
	<choose>
		<when test="sectors != null">
			<foreach item="sector" collection="sectors" separator="," open="'{" close="}'," index="">  
		      ${sector}
		    </foreach>  
		</when>
		<otherwise>null,</otherwise>
	</choose>
	<choose>
		<when test="tags != null">
			<foreach item="tag" collection="tags" separator="," open="'{" close="}'," index="">  
		      ${tag}
		    </foreach>  
		</when>
		<otherwise>null,</otherwise>
	</choose>
	  #{unit}, now(), 'test', '${file}')
	</insert>




	<!--修改专家信息-->
	<update id="updateExpert" parameterType="map">
		UPDATE "Experts"
		<set>
			<if test="name!=null and name!=''">
				"Name"=#{name},
			</if>
			<if test="unit!=null and unit!=''">
				"Unit"=#{unit},
			</if>
			<if test="education!=null and education!=''">
				"Education"=#{education},
			</if>
			<if test="jobTitle!=null and jobTitle!=''">
				"JobTitle"=#{jobTitle},
			</if>
			<if test="hFactor!=null and hFactor!=''">
				"HFactor"=#{hFactor},
			</if>
			<if test="researchDirection!=null and researchDirection!=''">
				"ResearchDirection"=#{researchDirection},
			</if>
			<if test="researchAchievement!=null and researchAchievement!=''">
				"ResearchAchievement"=#{researchAchievement},
			</if>
			<if test="resume!=null and resume!=''">
				"Resume"=#{resume},
			</if>
			<if test="contact!=null and contact!=''">
				"Contact"=#{contact},
			</if>
			<if test="cooperationStatus!=null and cooperationStatus!=''">
				"CooperationStatus"=#{cooperationStatus},
			</if>
			<if test="sectors!=null and sectors!=''">
				"Sectors"=
				<choose>
					<when test="sectors != null">
						<foreach item="sector" collection="sectors" separator="," open="'{" close="}'," index="">  
					      ${sector}
					    </foreach>  
					</when>
					<otherwise>null,</otherwise>
				</choose>
			</if>
			<if test="tags!=null and tags!=''">
				"Tags"=
				<choose>
					<when test="tags != null">
						<foreach item="tag" collection="tags" separator="," open="'{" close="}'," index="">  
					      ${tag}
					    </foreach>  
					</when>
				</choose>
			</if>
			<if test="rank!=null and rank!=''">
				"Rank"=#{rank},
			</if>
			<if test="isActive!=null and isActive!=''">
				"IsActive"=#{isActive},
			</if>
			<if test="updateId!=null and updateId!=''">
				"Id"=#{updateId},
			</if>
			<if test="updatedBy!=null and updatedBy!=''">
				"UpdatedBy"=#{updatedBy},
			</if>
				"UpdatedAt"=#{updateTime}
		</set>
		where "Id"=#{id}
	</update>


<!--查询行业领域搜索条件的总条数-->
	<select id="getCodeAtatusList" resultMap="statusMap">
		SELECT "code","value","rank","title" FROM "app_codeitem"
		<where>
				"type" = #{cooperType}
			<if test="cooperationStatus!=null and cooperationStatus!=''">
				 and "code" = '${cooperationStatus}'
			</if>
				
		</where>
	</select>


	

</mapper>