<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innovative.dao.TechSectionsApprouverDao">

	<resultMap id="techsectionApprouverMap"  type="com.innovative.bean.TechSectionsApprouver">
	  <id property="id" column="id" />
	  <result property="sectionId" column="sectionId"/>
	  <result property="approuverBy" column="approuverBy"/>
	  <result property="approuverAt" column="approuverAt"/>
	</resultMap> 

    <!--科技资讯点赞-->
    <insert id="insertTechApprouver" parameterType="map">
       INSERT INTO "xacx_tech_section_approuver" 
		("id", "sectionId", "approuverBy", "approuverAt")
		 VALUES (#{id}, #{sectionId},#{approuverBy},now());
    </insert>
     
      <!--根据id获取最近的一次点赞-->
	<!-- <select id="getApprouverLatest" resultType="informationApprouverMap">
		SELECT "approuverAt" FROM "xacx_information_push_approuver" 
		 WHERE "approuverBy" =  #{approuverBy} order by  "approuverAt" desc LIMIT 1
         offset 0 ;
	</select> -->
	 
	<!-- 该用户今天是否对此信息已点赞 -->
	<select id="isTodayApprouverTechInfornaion" resultType="Integer">
		SELECT count(*) FROM "xacx_tech_section_approuver" where "approuverBy" =  #{approuverBy} and "sectionId" =  #{sectionId} and to_date(cast("approuverAt" as TEXT),'yyyy-mm-dd') = current_date
	</select>


</mapper>