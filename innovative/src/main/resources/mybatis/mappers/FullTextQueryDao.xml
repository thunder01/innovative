            <if test="key1!='%%' and key1!='%null%'">
                OR "Education" LIKE #{key1}
            </if>
            <if test="key1!='%%' and key1!='%null%'">
                OR "JobTitle" LIKE #{key1}
            </if>
            <if test="key2!='{}' and key2!='{null}'">
                OR "Sectors" @> '${key2}'
            </if>
			AND "Deleted" = 'f' AND "IsActive" = 't'
		</where>
	</select>


