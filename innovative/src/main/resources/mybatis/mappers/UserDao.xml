		<!--根据查询条件获取列表-->
	<select id="getUserList" resultMap="userMap">
		SELECT * FROM "xacx_user"
		limit #{pageSize} offset #{startIndex}
	</select>

	<!--查询行业领域搜索条件的总条数-->
	<select id="getTotalCount" resultType="int">
		SELECT count(1) FROM "xacx_user"
	</select>

