<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.innovative.dao.AssociationDao">
	<resultMap id="associationMap" type="Association">
	  <id property="id" column="id" />
	  <result property="availableResources" column="availableResources"/>
	  <result property="contact" column="contact"/>
	  <result property="cooperationStatus" column="cooperationStatus"/>
	  <result property="createdAt" column="createdAt"/>
	  <result property="createdBy" column="createdBy"/>
	  <result property="deleted" column="deleted"/>
	  <result property="deletedAt" column="deletedAt"/>
	  <result property="deletedBy" column="deletedBy"/>
	  <result property="duration" column="duration"/>
	  <result property="introduction" column="introduction"/>
	  <result property="isActive" column="isActive"/>
	  <result property="logo" column="logo"/>
	  <result property="name" column="name"/>
	  <result property="nature" column="nature"/>
	  <result property="rank" column="rank"/>
	  <result property="rowVersion" column="rowVersion"/>
	  <result property="updatedAt" column="updatedAt"/>
	  <result property="updatedBy" column="updatedBy"/>
	  <result property="file" column="file"/>
	  <result property="website" column="website"/>
	  <result property="tags" column="tags" typeHandler="com.innovative.mybatisHandler.ArrayTypeHandler"/>
	  <result property="sectors" column="sectors" typeHandler="com.innovative.mybatisHandler.ArrayTypeHandler"/>
	   <collection property="filelist" ofType="FileBean">  
           <result property="refId" column="refId"/>
           <result property="refType" column="refType"/>
	  	   <result property="url" column="url"/>
	  	   <result property="fileName" column="filename"/>
       </collection> 
	</resultMap> 

    <!--根据id获取行业协会详情-->
	<select id="getAssociation" resultMap="associationMap">
		SELECT * FROM "Associations" e LEFT JOIN "xacx_file" f on f."refId" = e."Id" and f."refType" = 'indusinfoFile' and f."sign" = 'add'
		WHERE "Id" =  #{id};
	</select>
	

	<!--根据查询条件获取列表-->
	<select id="getAssociationList" resultMap="associationMap">
		SELECT * FROM "Associations"
		<where>
			<!-- <if test="sectors!=null and sectors!=''">
				 "Sectors" @> '${sectors}'
			</if> -->
			 "Deleted" = 'f' AND "IsActive" = 't'
		</where>
		order by "UpdatedAt"  DESC 
		limit #{pageSize} offset #{startIndex}
	</select>



	<!--查询行业领域搜索条件的总条数-->
	<select id="getTotalCount" resultType="int">
		SELECT count(1) FROM "Associations"
		<where>
			<!-- <if test="sectors!=null and sectors!=''">
				"Sectors" @> '${sectors}'
			</if> -->
			 "Deleted" = 'f' AND "IsActive" = 't'
		</where>
	</select>










	<!--添加行业协会-->
	<insert id="addAssociation" parameterType="Association">
		INSERT INTO "Associations"
		( "Id","AvailableResources", "Contact", "CooperationStatus", "CreatedAt", "CreatedBy", "Deleted", "DeletedAt", "DeletedBy", "Duration", "Introduction", "IsActive", "Logo", "Name", "Nature", "Rank", "RowVersion", "Sectors", "Tags", "UpdatedAt", "UpdatedBy", "Website", "File")
		VALUES (#{id} ,#{availableResources}, #{contact}, #{cooperationStatus}, now(), #{createdBy}, false, now(), #{deletedBy}, #{duration}, #{introduction}, true, '${logo}', #{name}, #{nature}, #{rank}, #{rowVersion}, 
		
		<choose>
		<when test="sectors != null">
			<foreach item="sector" collection="sectors" separator="," open="'{" close="}'," index="">  
		      ${sector}
		    </foreach>  
		</when>
		<otherwise>'{}',</otherwise>
	  </choose>
	<choose>
		<when test="tags != null">
			<foreach item="tag" collection="tags" separator="," open="'{" close="}'," index="">  
		      ${tag}
		    </foreach>  
		</when>
		<otherwise>'{}',</otherwise>
	</choose>
		now(), #{createdBy}, #{website}, '${file}')
	</insert>


	<!--修改行业协会-->
	<update id="updateAssociation" parameterType="Association">
		UPDATE "Associations"
		<set>
			<if test="name!=null and name!=''">
				"Name"=#{name},
			</if>
			<if test="introduction!=null and introduction!=''">
				"Introduction"=#{introduction},
			</if>
			<if test="nature!=null and nature!=''">
				"Nature"=#{nature},
			</if>
			<if test="duration!=null and duration!=''">
				"Duration"=#{duration},
			</if>
			<if test="availableResources!=null and availableResources!=''">
				"AvailableResources"=#{availableResources},
			</if>
			<if test="cooperationStatus!=null and cooperationStatus!=''">
				"CooperationStatus"=#{cooperationStatus},
			</if>
			<if test="contact!=null and contact!=''">
				"Contact"=#{contact},
			</if>
			<if test="website!=null and website!=''">
				"Website"=#{website},
			</if>
			<if test="sectors!=null and sectors!=''">
				"Sectors"=
				<choose>
					<when test="sectors != null">
						<foreach item="sector" collection="sectors" separator="," open="'{" close="}'," index="">  
					      ${sector}
					    </foreach>  
					</when>
					<otherwise>null,</otherwise>
				</choose>
			</if>
			<if test="tags!=null and tags!=''">
				"Tags"=
				<choose>
					<when test="tags != null">
						<foreach item="tag" collection="tags" separator="," open="'{" close="}'," index="">  
					      ${tag}
					    </foreach>  
					</when>
				</choose>
			</if>
			<if test="rank!=null and rank!=''">
				"Rank"=#{rank},
			</if>
			<if test="isActive!=null and isActive!=''">
				"IsActive"=#{isActive},
			</if>
			<if test="id!=null and id!=''">
				"Id"=#{id},
			</if>
			<if test="updatedBy!=null and updatedBy!=''">
				"UpdatedBy"=#{updatedBy},
			</if>
				"UpdatedAt"=now()
		</set>
		where "Id"=#{id}
	</update>





	

</mapper>